{% extends "layout.njk" %}

{% block content %}
  <section class="container">
    <div class="card table-container" data-element="green">
      <div class="content">
        <table>
          <thead>
            <tr>
              <th>Instrutor</th>
              <th>Modalidade</th>
              <th>Opções</th>
            </tr>
          </thead>
          <tbody>
            {% for instructor in instructors %}
              <tr>
                <td>
                  <span>
                    <img src="{{instructor.avatar_url}}" alt="">
                  </span>
                  <span>{{ instructor.name }}</span>
                </td>
                <td>{{ instructor.modality }}</td>
                <td>
                  <a class="btn-table" href="/instructors/{{instructor.id}}">
                    <i class="material-icons">folder_shared</i>
                    <span>ver</span>
                  </a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <a class="btn add" href="/instructors/create" title="Adicione um Instrutor">
        <i class="material-icons">add</i>
      </a>
    </div>
  </section>
{% endblock %}