{% extends "layout.njk" %}

{% block content %}
  <section class="container">
    <div class="card" data-element="green">
      <div class="avatar">
        <img src="{{ member.avatar_url }}" alt="{{ member.name }}">
      </div>
      <div class="details">
        <h2 class="h2">Detalhes</h2>

        <div class="item">
          <h4 class="h4">Membro</h4>
          <p>{{ member.name }}</p>
        </div>

        <div class="item">
          <h4 class="h4">E-mail</h4>
          <p>{{ member.email }}</p>
        </div>

        <div class="item">
          <h4 class="h4">Idade</h4>
          <p>{{ member.age }}</p>
        </div>

        <div class="item">
          <h4 class="h4">Aniversário</h4>
          <p>{{ member.birthday }}</p>
        </div>

        <div class="item">
          <h4 class="h4">Sexo</h4>
          {% if member.gender === 'M' %}
            <p>Masculino</p>
          {% elif member.gender === 'F' %}
            <p>Feminino</p>
          {% else %}
            <p>Prefiro não dizer</p>
          {% endif %}
        </div>

        <div class="item">
          <h4 class="h4">Tipo Sanguíneo</h4>
          <p>{{ member.blood}}</p>
        </div>

        <div class="item">
          <h4 class="h4">Peso (Kg)</h4>
          <p>{{ member.weigth }}</p>
        </div>

        <div class="item">
          <h4 class="h4">Altura (cm)</h4>
          <p>{{ member.height }}</p>
        </div>

        <div class="item">
          <h4 class="h4">Since</h4>
          <p>{{ member.created_at }}</p>
        </div>

        <div class="btn-group">
          {% include "includes/btn-edit.njk" %}
        </div>

      </div>
    </div>
  </section>
{% endblock %}